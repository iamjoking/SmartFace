<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>FaceRecognition</servlet-name>
        <servlet-class>websocket.FaceRecognition</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaceRecognition</servlet-name>
        <url-pattern>/FaceRecognition</url-pattern>
    </servlet-mapping>
    <!-- Increase Char Buffer and Byte Buffer to 20M -->
      <init-param>
        <param-name>byteBufferMaxSize</param-name>
        <param-value>20971520</param-value>
      </init-param>
      <init-param>
        <param-name>charBufferMaxSize</param-name>
        <param-value>20971520</param-value>
      </init-param>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
